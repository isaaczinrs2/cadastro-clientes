<%- include('partials/header') %>
        <h2>Buscar Clientes</h2>
        
        <% if (typeof error !== 'undefined') { %>
            <div class="alert error">
                <%= error %>
            </div>
        <% } %>

        <form action="/buscacliente" method="GET" class="search-form">
            <input type="text" name="termo" placeholder="Digite nome, cidade ou telefone..." 
                   value="<%= typeof termo !== 'undefined' ? termo : '' %>">
            <button type="submit" class="btn primary">Buscar</button>
        </form>
        
        <% if (typeof clientes !== 'undefined' && clientes.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>CEP</th>
                        <th>Cidade</th>
                        <th>Estado</th>
                        <th>Telefone</th>
                    </tr>
                </thead>
                <tbody>
                    <% clientes.forEach(cliente => { %>
                        <tr>
                            <td><%= cliente.id %></td>
                            <td><%= cliente.nome %></td>
                            <td><%= cliente.cep %></td>
                            <td><%= cliente.cidade %></td>
                            <td><%= cliente.estado %></td>
                            <td><%= cliente.telefone %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else if (typeof termo !== 'undefined' && termo !== '') { %>
            <p>Nenhum cliente encontrado para "<%= termo %>".</p>
        <% } %>
<%- include('partials/footer') %>   